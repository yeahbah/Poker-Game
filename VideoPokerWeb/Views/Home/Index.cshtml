@using Poker
@model VideoPokerWeb.Models.VideoPokerModel


<html>
<head>
    <style>
        /* The switch - the box around the slider */
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        /* Hide default HTML checkbox */
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        /* The slider */
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            -webkit-transition: .4s;
            transition: .4s;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

        input:checked + .slider {
            background-color: #2196F3;
        }

        input:focus + .slider {
            box-shadow: 0 0 1px #2196F3;
        }

        input:checked + .slider:before {
            -webkit-transform: translateX(26px);
            -ms-transform: translateX(26px);
            transform: translateX(26px);
        }

        /* Rounded sliders */
        .slider.round {
            border-radius: 34px;
        }

        .slider.round:before {
            border-radius: 50%;
        }
    </style>
</head>
<body>
<div style="margin: 100px">
    @foreach (var card in Model.Hand)
    {
        var bgColor = card.Suit switch
        {
            Poker.Suit.Clubs => "#228B22",
            Suit.Diamonds => "#33CCFF",
            Suit.Hearts => "red",
            Suit.Spades => "black",
            _ => throw new ArgumentOutOfRangeException()
            };

        var suitCode = card.Suit switch 
        {
            Suit.Clubs => "clubs;",
            Suit.Diamonds => "diams;",
            Suit.Hearts => "hearts;",
            Suit.Spades => "spades;",
            _ => throw new ArgumentOutOfRangeException()
            };

        <div style="float: left">
            <div style="float: left; width: 100px; height: 150px; padding: 20px; margin: 5px; box-shadow: 4px 3px 8px 1px #969696; border-radius: 5px; background-color: @bgColor;">
                <span style="font-weight: bold; color: white; font-size: 36pt; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
                    @card.ShortCode[0]&@suitCode
                </span>
            </div>
            <div style="padding-top: 20px; display: block; text-align: center">
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>

    }
</div>
</body>
</html>